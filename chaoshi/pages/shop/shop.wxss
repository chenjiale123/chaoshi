/* pages/shop/shop.wxss */

.top{
  width: 100%;
  height: 406rpx;

}
.top>image{
  width: 100%;
  height: 100%
}
.center{
  width: 100%;
  height: 80rpx;

}
.center>image{
  width: 100%;
  height: 100%
}
.shop{
  width: 100%;
  /* height: 100%; */
  overflow: hidden;
  padding-bottom: 98rpx;

}
.shopIn{
  width: 94%;
  height: 100%;
  margin: 0 auto;
  overflow: hidden;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  /* padding-bottom: 98rpx; */

}

.goods{
  width:342rpx;
height:auto;
background:rgba(255,255,255,1);
border-radius:10rpx;
margin-top: 20rpx;
overflow: hidden
}
.goods>image{
  width:342rpx;
height:342rpx;
border-radius:10rpx;
}
.goods>.js{
  width: 93%;
  margin: 0 auto;
  font-size:26rpx;
font-family:PingFang SC;
font-weight:500;
color:rgba(51,51,51,1);
margin-top: 15rpx;
display: block;
/* height: 68rpx; */
display: -webkit-box;
-webkit-box-orient: vertical;
-webkit-line-clamp: 2;
overflow: hidden;

}
.goods>.etc{
  width: 94%;
  margin: 0 auto;
  margin-top: 20rpx;
display: block;
  font-size:30rpx;
font-family:PingFang SC;
font-weight:500;
color:rgba(255,0,0,1)!important;
padding-bottom: 13rpx;
}
.footer{
  width:100%;
height:98rpx;
background:rgba(255,255,255,1);
position: fixed;
bottom: 0;
}
.footer>.footIn{
width: 65%;
height: 100%;
display: flex;
margin: 0 auto;
justify-content: space-between;
margin-top: 30rpx;
}
.footer>.footIn>text{
  font-size:26rpx;
font-family:PingFang SC;
font-weight:500;
color:rgb(0, 0, 0);
}
.footer>.footIn>.etc{
color:rgba(243,177,0,1);
}
