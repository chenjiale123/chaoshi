/* pages/recharge/recharge.wxss */
.top{
  width: 100%;
  height: 92rpx;
  padding: 0 20rpx;
  overflow: hidden;
  margin: 0 auto;
display: flex;
justify-content: space-around;
margin-top: 30rpx;
background: #fff
}
.top>text{
  margin-top: 20rpx;
  font-size:32rpx;
font-family:PingFang SC;
font-weight:500;
color:rgba(51,51,51,1);
}
.top>input{
  margin-top: 20rpx;

  width:530rpx;
height:56rpx;
background:rgba(242,242,242,1);
border-radius:10rpx;
padding-left: 20rpx;
}
input::placeholder{
  font-size:26rpx;
font-family:PingFang SC;
font-weight:500;
color:rgba(153,153,153,1);
}
button{
  width:360rpx;
height:68rpx;
background:rgba(243,177,0,1);
box-shadow:0px 4px 6px 0px rgba(243,177,0,0.5);
border-radius:34rpx;
margin: 0 auto;
margin-top: 60rpx;
font-size:32rpx;
font-family:PingFang SC;
font-weight:bold;
color:rgba(255,255,255,1);
text-align: center;
}